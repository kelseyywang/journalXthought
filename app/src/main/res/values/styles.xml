<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue1</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/green1</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflow</item>
        <item name="android:popupMenuStyle">@style/MyApp.PopupMenu</item>
        <item name="android:textColorSecondary">@color/gray1</item>
    </style>

    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/menu</item>
        <item name="android:maxHeight">10dp</item>
        <item name="android:maxWidth">10dp</item>
        <item name="android:color">@color/gray1</item>
    </style>

    <style name="MyApp.PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:background">@color/green1</item>
        <item name="android:textColor">@color/gray1</item>
    </style>

</resources>
